{{ 'card-desc-incline-image.css' |  asset_url |  stylesheet_tag }}
<div class="card_desc_incline_image" style="background-color: {{ section.settings.bg_color_section }} ;">
 <h1 class="title_section" style="color: {{ section.settings.title_color  }};">{{ section.settings.title_section }}</h1>
 <div class="row {{ section.settings.image_position }}" style="color: {{ section.settings.text_color }};">
    {{ section.settings.text_section }} 
    <img  style="{% if section.settings.image_position == "left" and section.settings.image_rotation == "incline"%} transform:rotate(-7deg) ;{% endif %}{% if section.settings.image_position == "right" and section.settings.image_rotation == "incline"%} transform:rotate(7deg) {% endif %}" src="{{ section.settings.image_section |  image_url  }}" alt="">
 </div>
</div>
{% schema %}
{
    "name": "Card Incline Image",
    "tag": "section",
    "settings": [
        {
        "type": "radio",
        "label": "Select Image Rotation",
        "id": "image_rotation",
        "options": [
          {
            "value": "normal",
            "label": "normal"
          }, {
            "value": "incline",
            "label": "incline"
          }
        ],
        "default": "normal"
      },
      {
        "type": "radio",
        "label": "Select Image Position",
        "id": "image_position",
        "options": [
          {
            "value": "left",
            "label": "left"
          }, {
            "value": "right",
            "label": "right"
          }
        ],
        "default": "left"
      },
        {
            "type": "color",
            "id": "bg_color_section",
            "label": "Section Background Color",
            "default":"#ffffff"
        },
        {
            "type": "text",
            "id": "title_section",
            "label": "Title Section",
            "default": "YOU+SILK=P0WER!"
        },
        {
            "type": "image_picker",
            "id": "image_section",
            "label": "Select The Image"
        },
        {
            "type": "richtext",
            "id":"text_section",
            "label": "Text Content"
            
        },
        {
            "type": "color",
            "id": "title_color",
            "label": "Title Color",
            "default":"#000000"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text Paragraph Color",
            "default":"#152f4e"
        }
        ],
        "presets": [
      {
        "name": "Card + Incline Image"
      }
    ]
}
{% endschema %}